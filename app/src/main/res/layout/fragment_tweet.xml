<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">
    <ImageButton
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:id="@+id/userIconButton"
        android:contentDescription="@android:string/untitled"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/userIconButton"
        android:inputType="textMultiLine"
        android:gravity="left|top"/>
    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/tweetButton"
                 android:src="@drawable/ic_send_white"
                 android:contentDescription="@string/tweet"
                 android:layout_gravity="center"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentEnd="true"
                 android:layout_alignStart="@+id/userIconButton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tweet_length"
        android:id="@+id/tweetLength"
        android:layout_above="@+id/tweetButton"
        android:layout_alignStart="@+id/tweetButton"
        android:gravity="center"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
