<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/itemView"
              android:paddingTop="@dimen/status_horizontal_margin"
              android:paddingBottom="@dimen/status_horizontal_margin"
              android:clickable="true"
              android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginLeft="@dimen/icon_vertical_margin"
        android:layout_marginRight="@dimen/icon_vertical_margin"
        android:id="@+id/statusIconView"
        android:contentDescription="@android:string/untitled"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/status_text_vertical_short_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:id="@+id/statusNameView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/statusIconView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:alpha="0.7"
        android:gravity="center|left"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/status_text_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:id="@+id/statusScreenNameView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/statusNameView"
        android:layout_toLeftOf="@+id/statusCreatedAt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/status_text_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:id="@+id/statusTextView"
        android:layout_below="@+id/statusNameView"
        android:layout_toEndOf="@+id/statusIconView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:alpha="0.7"
        android:gravity="center"
        android:visibility="gone"
        android:paddingLeft="@dimen/status_text_vertical_margin"
        android:paddingRight="@dimen/status_text_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_autorenew_white"
        android:id="@+id/statusRetweetedScreenName"
        android:layout_below="@+id/statusTextView"
        android:layout_toEndOf="@+id/statusIconView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:alpha="0.7"
        android:gravity="center"
        android:paddingLeft="@dimen/status_text_vertical_margin"
        android:paddingRight="@dimen/status_text_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:id="@+id/statusClientName"
        android:layout_below="@+id/statusTextView"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:alpha="0.7"
        android:gravity="center"
        android:paddingLeft="@dimen/status_text_vertical_margin"
        android:paddingRight="@dimen/status_text_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:id="@+id/statusCreatedAt"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/statusTextView"/>
</RelativeLayout>
